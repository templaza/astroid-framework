         <field astroidgroup="colormode" description="TPL_ASTROID_BASIC_ENABLE_COLOR_MODE_DESC" name="astroid_color_mode_enable" type="astroidradio" default="0" label="TPL_ASTROID_BASIC_ENABLE_COLOR_MODE_LABEL">

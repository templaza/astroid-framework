            <option value="auto">TPL_ASTROID_BASIC_COLOR_MODE_OPTION_AUTO</option>
            <option value="light">TPL_ASTROID_BASIC_COLOR_MODE_OPTION_LIGHT</option>
            <option value="dark">TPL_ASTROID_BASIC_COLOR_MODE_OPTION_DARK</option>
